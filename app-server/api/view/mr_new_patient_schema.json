{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The Root Schema",
    "description": "The root schema comprises the entire JSON document.",
    "required": [
        "patient_Id",
        "time_tag",
        "first_name",
        "last4Digit",
        "institute_name",
        "department_name",
        "room_identifier",
        "bed_identifier",
        "bed_location",
        "date_of_birth",
        "risk_group",
        "normal_range_list",
        "sensors_list"
    ],
    "properties": {
        "patient_Id": {
            "$id": "#/properties/patient_Id",
            "type": "string",
            "title": "The Patient_id Schema",
            "description": "Unique ID of the patient, Unknown indicates invalid data",
            "default": "Unknown",
            "examples": [
                "a64ce230-73db-11ea-9ca9-e56bb32f5931"
            ]
        },
        "time_tag": {
            "$id": "#/properties/time_tag",
            "type": "string",
            "format": "date-time",
            "title": "The Time_tag Schema",
            "description": "The time tag of which the patient was registered in iso format(utc time), Unknown indicates invalid data",
            "default": "",
            "examples": [
                "2020-04-13T07:50:39.268428"
            ]
        },
        "first_name": {
            "$id": "#/properties/first_name",
            "type": "string",
            "title": "The First_name Schema, Unknown indicates invalid data",
            "description": "First name of the patient.",
            "default": "Unknown",
            "examples": [
                "Israel"
            ]
        },
        "last4Digit": {
            "$id": "#/properties/last4Digit",
            "type": "string",
            "title": "The Last4digit Schema",
            "description": "Last 4 digits of the patient ID, Unknown indicates invalid data.",
            "default": "Unknown",
            "examples": [
                "1234"
            ]
        },
        "institute_name": {
            "$id": "#/properties/institute_name",
            "type": "string",
            "title": "The Institute_name Schema",
            "description": "The institute in which the patient was hospitalized, Unknown indicates invalid data.",
            "default": "Unknown",
            "examples": [
                "Assuta Ashdod"
            ]
        },
        "department_name": {
            "$id": "#/properties/department_name",
            "type": "string",
            "title": "The Department_name Schema",
            "description": "The department in which the patient is staying, Unknown indicates invalid data.",
            "default": "Unknown",
            "examples": [
                "Korona-1A"
            ]
        },
        "room_identifier": {
            "$id": "#/properties/room_identifier",
            "type": "string",
            "title": "The Room_identifier Schema",
            "description": "The room identifier (i.e. room number) in which the patient is staying, Unknown indicates invalid data.",
            "default": "Unknown",
            "examples": [
                "43-7"
            ]
        },
        "bed_identifier": {
            "$id": "#/properties/bed_identifier",
            "type": "string",
            "title": "The Bed_identifier Schema",
            "description": "The bed in which the patient is lying, Unknown indicates invalid data.",
            "default": "Unknown",
            "examples": [
                "12"
            ]
        },
        "bed_location": {
            "$id": "#/properties/bed_location",
            "type": "string",
            "title": "The Bed_location Schema",
            "description": "Description of bed position inside the room, Unknown indicates invalid data.",
            "default": "Unknown",
            "examples": [
                "Window"
            ]
        },
        "date_of_birth": {
            "$id": "#/properties/date_of_birth",
            "type": "string",
            "format": "date",
            "title": "The Date_of_birth Schema",
            "description": "Patient date of birth, Unknown indicates invalid data.",
            "default": "Unknown",
            "examples": [
                "1993-03-14"
            ]
        },
        "risk_group": {
            "$id": "#/properties/risk_group",
            "type": "string",
            "title": "The Risk_group Schema",
            "description": "An indicator that the patient is included in some risk group, including age, Unknown indicates invalid data.",
            "default": "Unknown",
            "examples": [
                "Unknown",
                "True",
                "False"
            ]
        },
        "weight": {
            "$id": "#/properties/weight",
            "type": "number",
            "title": "The Weight Schema",
            "description": "The patient weight, use 0 to indicate invalid data, 0 indicates invalid data.",
            "default": 0,
            "examples": [
                79.9
            ]
        },
        "gender": {
            "$id": "#/properties/gender",
            "type": "string",
            "title": "The Gender Schema",
            "description": "The patient gender, Unknown indicates invalid data.",
            "default": "Unknown",
            "examples": [
                "Unknown",
                "Male",
                "Female"
            ]
        },
        "normal_range_list": {
            "$id": "#/properties/normal_range_list",
            "type": "array",
            "title": "The Normal_range_list Schema",
            "description": "List of our patient normal measurements ranges (defined by measurement abbreviation, minimal and maximal values).",
            "default": [],
            "items": {
                "$id": "#/properties/normal_range_list/items",
                "type": "object",
                "title": "The Items Schema",
                "description": "Measurement abbreviation/name, minimal and maximal values.",
                "default": {},
                "examples": [
                    {
                        "HR": {
                            "max": 90.0,
                            "min": 51.0
                        }
                    },
                    {
                        "SpO2": {
                            "min": 96.0,
                            "max": 100.0
                        }
                    },
                    {
                        "RR": {
                            "max": 20.0,
                            "min": 12.0
                        }
                    }
                ],
                "required": [
                    "MR"
                ],
                "properties": {
                    "measurement_range_item": {
                        "$id": "#/properties/normal_range_list/items/properties/HR",
                        "type": "object",
                        "title": "The measurement range Schema",
                        "description": "minimal and maximal values.",
                        "default": {},
                        "examples": [
                            {
                                "max": 100.0,
                                "min": 0.0
                            }
                        ],
                        "required": [
                            "min",
                            "max"
                        ],
                        "properties": {
                            "min": {
                                "$id": "#/properties/normal_range_list/items/properties/HR/properties/min",
                                "type": "integer",
                                "title": "The Min Schema",
                                "description": "measurement minimal value.",
                                "default": 0,
                                "examples": [
                                    51
                                ]
                            },
                            "max": {
                                "$id": "#/properties/normal_range_list/items/properties/HR/properties/max",
                                "type": "integer",
                                "title": "The Max Schema",
                                "description": "measurement minimal value, must be above minimal value.",
                                "default": 0,
                                "examples": [
                                    90
                                ]
                            }
                        }
                    }
                }
            }
        },
        "sensors_list": {
            "$id": "#/properties/sensors_list",
            "type": "array",
            "title": "The Sensors_list Schema",
            "description": "List of sensors attached to the patient.",
            "default": [],
            "items": {
                "$id": "#/properties/sensors_list/items",
                "type": "object",
                "title": "The Items Schema",
                "description": "Sensor details.",
                "default": {},
                "examples": [
                    {
                        "Early Sense": {
                            "description": "very good sensor",
                            "sensor_name": "Early Sense",
                            "vendor_name": "Early Sense",
                            "unit_Id": "a64ce230-73db-11ea-9ca9-e56bb32f5932"
                        }
                    },
                    {
                        "NanoVation": {
                            "description": "CONTINUOUS REMOTE RESPIRATORY MONITORING",
                            "sensor_name": "SenseGuard",
                            "vendor_name": " NanoVation ",
                            "unit_Id": "a64ce230-73db-11ea-9ca9-e56bb32f5933"
                        }
                    }
                ],
                "required": [
                    "Early Sense"
                ],
                "properties": {
                    "sensor_item": {
                        "$id": "#/properties/sensors_list/items/properties/Early Sense",
                        "type": "object",
                        "title": "The sensor item Schema",
                        "description": "Details of each sensor.",
                        "default": {},
                        "examples": [
                            {
                                "unit_Id": "a64ce230-73db-11ea-9ca9-e56bb32f5932",
                                "description": "very good sensor",
                                "sensor_name": "Early Sense",
                                "vendor_name": "Early Sense"
                            }
                        ],
                        "required": [
                            "unit_Id",
                            "sensor_name",
                            "vendor_name",
                            "description"
                        ],
                        "properties": {
                            "unit_Id": {
                                "$id": "#/properties/sensors_list/items/properties/Early Sense/properties/unit_Id",
                                "type": "string",
                                "title": "The Unit_id Schema",
                                "description": "Sensor unique identifier.",
                                "default": "",
                                "examples": [
                                    "a64ce230-73db-11ea-9ca9-e56bb32f5932"
                                ]
                            },
                            "sensor_name": {
                                "$id": "#/properties/sensors_list/items/properties/Early Sense/properties/sensor_name",
                                "type": "string",
                                "title": "The Sensor_name Schema",
                                "description": "Early sense chair sensor.",
                                "default": "",
                                "examples": [
                                    "Early Sense"
                                ]
                            },
                            "vendor_name": {
                                "$id": "#/properties/sensors_list/items/properties/Early Sense/properties/vendor_name",
                                "type": "string",
                                "title": "The Vendor_name Schema",
                                "description": "Sensor vendor name.",
                                "default": "",
                                "examples": [
                                    "Early Sense"
                                ]
                            },
                            "description": {
                                "$id": "#/properties/sensors_list/items/properties/Early Sense/properties/description",
                                "type": "string",
                                "title": "The Description Schema",
                                "description": "Sensor description.",
                                "default": "",
                                "examples": [
                                    "The memory foam-cushioned chair sensor captures a patientâ€™s vital signs and movement while seated in a chair."
                                ]
                            }
                        }
                    }
                }
            }
        }
    }
}